###############################################################################
## Main BJam makefile for TuttleOFX Blur Plugin
###############################################################################
import os ;
 
###############################################################################
# Global project requirements
###############################################################################
project
    : requirements	
				<include>src
    : build-dir $(DIST)/Blur/obj
    ;
 
###############################################################################
# Dependencies
###############################################################################
if [ os.name ] = NT	
	{	lib opengl32 ; 	alias opengl : opengl32 ; }
else if [ os.name ] = LINUX 
	{	alias opengl : ; }
else if [ os.name ] = MACOSX 
	{	alias opengl : : : : <linkflags>"-framework OpenGL" ; }
 
###############################################################################
# Product 
###############################################################################
plugin Blur : 
    [ glob-tree *.cpp ]
    /tuttleplugin/<link>static
    opengl
    ;
 
###############################################################################
# Automatic install
###############################################################################
auto_install Blur : $(DIST) ;
 